@model RoomFlow.Models.AdditionalService

@{
	ViewData["Title"] = "Удалить дополнительную услугу";
}

<h1 class="text-danger">Удалить дополнительную услугу</h1>
<hr />

<h4>Вы уверены, что хотите удалить эту услугу?</h4>

<dl class="row mt-3">
	<dt class="col-sm-3">Название</dt>
	<dd class="col-sm-9">@Model.Name</dd>

	<dt class="col-sm-3">Категория</dt>
	<dd class="col-sm-9">@Model.Category</dd>

	<dt class="col-sm-3">Стоимость</dt>
	<dd class="col-sm-9">@Model.Price.ToString("C") @Model.PriceType</dd>

	<dt class="col-sm-3">Доступна</dt>
	<dd class="col-sm-9">@(Model.IsAvailable ? "Да" : "Нет")</dd>
</dl>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Удалить</button>
	<a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

