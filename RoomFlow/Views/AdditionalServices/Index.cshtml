@model IEnumerable<RoomFlow.Models.AdditionalService>

@{
	ViewData["Title"] = "Дополнительные услуги";
}

<h1 class="mb-3">Дополнительные услуги</h1>

@if (TempData["SuccessMessage"] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		@TempData["SuccessMessage"]
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<p>
	<a asp-controller="AdditionalServices" asp-action="Create" class="btn btn-primary">Добавить услугу</a>
</p>

<table class="table table-striped table-bordered">
	<thead class="table-dark">
		<tr>
			<th>Название</th>
			<th>Категория</th>
			<th>Стоимость</th>
			<th>Тип цены</th>
			<th>Доступна</th>
			<th>Действия</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Category</td>
				<td>@item.Price.ToString("C")</td>
				<td>@item.PriceType</td>
				<td>@(item.IsAvailable ? "Да" : "Нет")</td>
				<td class="text-center">
					<a asp-controller="AdditionalServices" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
					<a asp-controller="AdditionalServices" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Подробнее</a>
					<a asp-controller="AdditionalServices" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
				</td>
			</tr>
		}
	</tbody>
</table>

