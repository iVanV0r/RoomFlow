@model IEnumerable<RoomFlow.Models.Client>

@{
    ViewData["Title"] = "Добавить клиента";
}

<h1 class="mb-3">Добавить клиента</h1>
<hr />

<form asp-controller="Clients" asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FullName" class="form-label fw-semibold"></label>
            <input asp-for="FullName" class="form-control" placeholder="Введите полное имя клиента" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label fw-semibold"></label>
            <input asp-for="Email" class="form-control" placeholder="client@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="DateOfBorn" class="form-label fw-semibold"></label>
            <input asp-for="DateOfBorn" class="form-control" type="date" />
            <span asp-validation-for="DateOfBorn" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Gender" class="form-label fw-semibold"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">Выберите пол</option>
                <option value="Мужской">Мужской</option>
                <option value="Женский">Женский</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="Passport" class="form-label fw-semibold"></label>
            <input asp-for="Passport" class="form-control" type="number" placeholder="10 цифр" />
            <span asp-validation-for="Passport" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Phone" class="form-label fw-semibold"></label>
            <input asp-for="Phone" class="form-control" placeholder="+7 (999) 123-45-67" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
        <button type="submit" class="btn btn-success px-4">Сохранить</button>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
