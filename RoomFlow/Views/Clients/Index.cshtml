@model IEnumerable<RoomFlow.Models.Client>

@{
    ViewData["Title"] = "Клиенты";
}

<h1 class="mb-3">Клиенты</h1>

<p>
    <a asp-controller="Clients" asp-action="Create" class="btn btn-primary">Добавить клиента</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ФИО</th>
            <th>Email</th>
            <th>Дата рождения</th>
            <th>Пол</th>
            <th>Паспорт</th>
            <th>Телефон</th>
            <th class="text-center">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.DateOfBorn.ToShortDateString()</td>
                <td>@item.Gender</td>
                <td>@item.Passport</td>
                <td>@item.Phone</td>
                <td class="text-center">
                    <a asp-controller="Clients" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-controller="Clients" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Подробнее</a>
                </td>
            </tr>
        }
    </tbody>
</table>
