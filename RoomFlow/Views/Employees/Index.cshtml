@model IEnumerable<RoomFlow.Models.Employee>

@{
    ViewData["Title"] = "Сотрудники";
}

<h1 class="mb-3">Сотрудники</h1>

<p>
    <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">Добавить сотрудника</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ФИО</th>
            <th>Должность</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Оклад</th>
            <th>Дата найма</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Position</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Salary.ToString("C")</td>
                <td>@item.HireDate.ToShortDateString()</td>
                <td class="text-center">
                    <a asp-controller="Employees" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-controller="Employees" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Подробнее</a>
                    <a asp-controller="Employees" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>