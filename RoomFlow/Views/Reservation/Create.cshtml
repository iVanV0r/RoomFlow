@model RoomFlow.Models.Reservation

<h2>Создать бронирование</h2>

<form method="post">

    <div class="form-group">
        <label>Имя гостя</label>
        <input asp-for="GuestName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="GuestEmail" class="form-control" />
    </div>

    <div class="form-group">
        <label>Телефон</label>
        <input asp-for="GuestPhone" class="form-control" />
    </div>

    <div class="form-group">
        <label>Номер</label>
        <select asp-for="RoomId" class="form-control">
            <option value="1">123</option>
        </select>
    </div>

    <div class="form-group">
        <label>Дата заезда</label>
        <input asp-for="CheckInDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Дата выезда</label>
        <input asp-for="CheckOutDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Стоимость</label>
        <input asp-for="TotalPrice" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Сохранить</button>
</form>
