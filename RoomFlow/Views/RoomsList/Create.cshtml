@model RoomFlow.Models.Room

<h2>Добавить комнату</h2>

<form asp-controller="RoomsList" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RoomType"></label>
        <input asp-for="RoomType" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Floor"></label>
        <input asp-for="Floor" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="BasePricePerNight"></label>
        <input asp-for="BasePricePerNight" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<RoomFlow.Models.RoomStatus>()"></select>
    </div>

    <button type="submit" class="btn btn-success">Создать</button>
</form>
