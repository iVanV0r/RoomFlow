@model IEnumerable<RoomFlow.Models.Room>


<h2>Список номеров</h2>

<p>
    <a asp-controller="RoomsList" asp-action="Create" class="btn btn-primary">Добавить номер</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Тип</th>
            <th>Этаж</th>
            <th>Места</th>
            <th>Цена</th>
            <th>Статус</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.RoomType</td>
                <td>@room.Floor</td>
                <td>@room.Capacity</td>
                <td>@room.BasePricePerNight ₽</td>
                <td>@room.Status</td>
            </tr>
        }
    </tbody>
</table>
